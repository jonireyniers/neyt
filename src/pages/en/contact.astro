---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const locale: 'en' | 'fr' | 'nl' = 'en';
---

<BaseLayout title="Contact — Neyt" locale={locale}>
  <Header locale={locale} />

  <main>
    <!-- Hero Section -->
    <section class="relative py-16 bg-gradient-to-br from-primary to-secondary text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Get in Touch</h1>
          <p class="text-lg md:text-xl opacity-90">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section">
      <div class="container max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-serif font-bold mb-6">Contact Information</h2>
              
              <div class="space-y-6">
                <!-- Address Card -->
                <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
                  <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg mb-2">Our Office</h3>
                    <address class="not-italic text-gray-600">
                      <div class="font-medium text-gray-900">Neyt NV</div>
                      <div>Heistraat 12</div>
                      <div>9080 Beervelde</div>
                      <div>Belgium</div>
                    </address>
                  </div>
                </div>

                <!-- Phone Card -->
                <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
                  <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg mb-2">Phone & Fax</h3>
                    <div class="text-gray-600">
                      <div>Tel: <a href="tel:+3293539208" class="text-accent hover:underline font-medium">+32 9 353 92 08</a></div>
                      <div>Fax: +32 9 353 92 10</div>
                    </div>
                  </div>
                </div>

                <!-- Hours Card -->
                <div class="flex items-start gap-4 p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
                  <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg mb-2">Business Hours</h3>
                    <div class="text-gray-600">
                      <div>Monday - Friday</div>
                      <div class="text-sm">Production hours only</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- B2B Notice -->
            <div class="p-6 bg-blue-50 border-l-4 border-blue-500 rounded-lg">
              <div class="flex gap-3">
                <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-blue-900 mb-1">B2B Only</h3>
                  <p class="text-sm text-blue-800">
                    We do not sell directly to the public. For information about Neyt products, 
                    please contact a furniture store in your area.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-10">
            <h2 class="text-2xl font-serif font-bold mb-6">Send us a Message</h2>

            <form id="contactForm" class="space-y-5" method="post" action="/api/contact" novalidate>
              <div class="grid md:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Full Name <span class="text-red-500">*</span>
                  </label>
                  <input 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition" 
                    placeholder="John Doe"
                  />
                </div>

                <div>
                  <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                    Company <span class="text-red-500">*</span>
                  </label>
                  <input 
                    id="company" 
                    name="company" 
                    required 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition" 
                    placeholder="Your Company"
                  />
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-5">
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    E-mail <span class="text-red-500">*</span>
                  </label>
                  <input 
                    id="email" 
                    name="email" 
                    type="email" 
                    required 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition" 
                    placeholder="john@company.com"
                  />
                </div>

                <div>
                  <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                    Country <span class="text-red-500">*</span>
                  </label>
                  <select 
                    id="country" 
                    name="country" 
                    required 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition"
                  >
                    <option value="">Select a country</option>
                    <option value="BE">Belgium</option>
                    <option value="NL">Netherlands</option>
                    <option value="FR">France</option>
                    <option value="DE">Germany</option>
                    <option value="UK">United Kingdom</option>
                    <option value="OTHER">Other</option>
                  </select>
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-5">
                <div>
                  <label for="activity" class="block text-sm font-medium text-gray-700 mb-2">
                    Activity
                  </label>
                  <input 
                    id="activity" 
                    name="activity" 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition" 
                    placeholder="Furniture Retail"
                  />
                </div>

                <div>
                  <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                    City
                  </label>
                  <input 
                    id="city" 
                    name="city" 
                    class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition" 
                    placeholder="Brussels"
                  />
                </div>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required 
                  class="w-full border border-gray-300 px-4 py-3 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition resize-none" 
                  placeholder="Tell us about your inquiry..."
                ></textarea>
              </div>

              <div class="flex items-center justify-between pt-2">
                <p class="text-sm text-gray-500">
                  <span class="text-red-500">*</span> Required fields
                </p>
                <button 
                  type="submit" 
                  class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white rounded-lg font-semibold hover:bg-accent/90 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 transition-all transform hover:scale-105 shadow-lg"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                  </svg>
                  Send Message
                </button>
              </div>

              <div id="status" class="text-sm min-h-[1.5rem]"></div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer locale={locale} />

  <script>
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const statusEl = document.getElementById('status') as HTMLElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      statusEl.textContent = 'Sending...';
      statusEl.className = 'text-sm min-h-[1.5rem] text-blue-600';

      const data = new FormData(form);

      try {
        const resp = await fetch('/api/contact', { method: 'POST', body: data });
        const json = await resp.json();

        if (resp.ok && json?.success) {
          statusEl.textContent = '✓ Message sent successfully! We will contact you soon.';
          statusEl.className = 'text-sm min-h-[1.5rem] text-green-600 font-medium';
          form.reset();
        } else {
          statusEl.textContent = `✗ ${json?.error || 'Something went wrong. Please try again.'}`;
          statusEl.className = 'text-sm min-h-[1.5rem] text-red-600 font-medium';
        }
      } catch (err) {
        statusEl.textContent = '✗ Connection failed. Please check your network.';
        statusEl.className = 'text-sm min-h-[1.5rem] text-red-600 font-medium';
      }
    });
  </script>
</BaseLayout>