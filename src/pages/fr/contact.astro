          statusEl.className = 'text-sm min-h-[1.5rem] text-green-600 font-medium';
          form.reset();
        } else {
          statusEl.textContent = `✗ ${json?.error || 'Quelque chose s\'est mal passé. Veuillez réessayer.'}`;
          statusEl.className = 'text-sm min-h-[1.5rem] text-red-600 font-medium';
        }
      } catch (err) {
        statusEl.textContent = '✗ Échec de connexion. Vérifiez votre réseau.';
        statusEl.className = 'text-sm min-h-[1.5rem] text-red-600 font-medium';
      }
    });
