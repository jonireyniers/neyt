import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const locale: 'en' | 'fr' | 'nl' = 'fr';

const currentYear = new Date().getFullYear();

// Sluitingsdagen 2026
const closingDates = [
  { period_start: '2026-04-06', period_end: '2026-04-06', description_nl: 'Paasmaandag', description_fr: 'Lundi de Pâques' },
  { period_start: '2026-05-01', period_end: '2026-05-01', description_nl: 'Dag van de Arbeid', description_fr: 'Fête du Travail' },
  { period_start: '2026-05-14', period_end: '2026-05-15', description_nl: 'O.H. Hemelvaart weekend', description_fr: 'Weekend de l\'Ascension' },
  { period_start: '2026-05-25', period_end: '2026-05-25', description_nl: 'Pinkstermaandag', description_fr: 'Lundi de Pentecôte' },
  { period_start: '2026-07-13', period_end: '2026-07-31', description_nl: 'Zomervakantie', description_fr: 'Vacances d\'été' },
  { period_start: '2026-08-15', period_end: '2026-08-21', description_nl: 'O.L.V. Hemelvaart week', description_fr: 'Semaine de l\'Assomption' },
  { period_start: '2026-11-11', period_end: '2026-11-11', description_nl: 'Wapenstilstand', description_fr: 'Jour de l\'Armistice' },
  { period_start: '2026-12-24', period_end: '2026-12-31', description_nl: 'Kerstvakantie', description_fr: 'Vacances de Noël' },
];

function formatDateRange(start: string, end: string, locale: string): string {
  const startDate = new Date(start);
  const endDate = new Date(end);
  const options: Intl.DateTimeFormatOptions = { day: '2-digit', month: '2-digit', year: 'numeric' };
  
  if (start === end) {
    return startDate.toLocaleDateString(locale === 'en' ? 'en-GB' : locale === 'fr' ? 'fr-FR' : 'nl-BE', options);
  }
  
  const startStr = startDate.toLocaleDateString(locale === 'en' ? 'en-GB' : locale === 'fr' ? 'fr-FR' : 'nl-BE', options);
  const endStr = endDate.toLocaleDateString(locale === 'en' ? 'en-GB' : locale === 'fr' ? 'fr-FR' : 'nl-BE', options);
  return `${startStr} – ${endStr}`;
}
